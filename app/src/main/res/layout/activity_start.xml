<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".startActivity">


    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03exConvertion"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />

    <TextView
        android:id="@+id/textViewConvertion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertion"
       app:layout_constraintTop_toBottomOf="@id/textViewInfo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"
        />

    <Button
        android:id="@+id/buttonTempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:onClick="infotemp"
        app:layout_constraintTop_toBottomOf="@id/textViewConvertion"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="120dp"

        />

    <Button
        android:id="@+id/buttonMetre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:onClick="infometr"
        android:text="Metrix"
        app:layout_constraintStart_toStartOf="@id/buttonTempo"

        app:layout_constraintTop_toBottomOf="@id/buttonTempo" />

    <Button
        android:id="@+id/buttonend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End"
        android:onClick="endprog"
        app:layout_constraintStart_toStartOf="@id/buttonMetre"
        app:layout_constraintEnd_toEndOf="@id/buttonMetre"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMetre"

        />
</androidx.constraintlayout.widget.ConstraintLayout>